RewriteEngine On
Options -MultiViews

RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+?)/$ /$1 [R=301,L]

RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+?)$ $1.html [L]

<IfModule mod_headers.c>
  # Campaign mirrors should not be indexed by search engines.
  # Using an HTTP header (vs. meta tag) covers more content-types and status codes.
  Header always set X-Robots-Tag "noindex,follow"

  <FilesMatch "\.(html?)$">
    Header set Cache-Control "no-cache, max-age=0, must-revalidate"
  </FilesMatch>

  <FilesMatch "\.(css|js|woff2?|ttf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>
